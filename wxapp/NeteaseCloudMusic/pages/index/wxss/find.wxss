.find {
  width: 100%;
}
/* 轮播图 */
.find .slide {
  margin-top: 20rpx;
  width: 100%;
  margin-bottom: 20rpx;
}
.find .swiper {
  height: 250rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 auto;
  width: 90%;
}
.find swiper-item {
  width: 90%;
  height: 100%;
}
.find .banners-img {
  width: 100%;
  height: 100%;
}
/* 菜单 */
.menu {
  width: 96%;
  margin: 40rpx auto 0;
  display: flex;
  justify-content: space-around;
}
.menu .menu-item {
  width: 100rpx;
  height: 100rpx;
  font-size: 25rpx;
  background-color: rgb(198, 47, 47);
  border-radius: 50%;
  position: relative;
  text-align: center;
}
.menu .menu-item .iconfont {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 54rpx;
}
.menu .menu-item text {
  position: relative;
  top: 114rpx;
}
.line {
  margin-top: 80rpx;
  border-bottom: 1px solid #000;
  opacity: 0.1;
}
/* 推荐歌单 */
.songList-wrap {
  width: 100%;
  padding: 37.5rpx;
  box-sizing: border-box;
}
.songList-wrap .songList-title_wrap {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 30rpx;
}
.songList-title {
  font-size: 32rpx;
  font-weight: 500;
}
.songList-square {
  font-size: 22rpx;
  border: 1px solid rgb(199, 195, 195);
  padding: 5rpx 16rpx;
  border-radius: 20rpx;
}
.songList {
  width: 100%;
  display: block;
}
.song-sheet {
  display: inline-block;
  width: 213rpx;
  margin-right: 20rpx;
}
.song-sheet:nth-child(3n + 3) {
  margin-right: 0;
}
.song-sheet_img {
  width: 100%;
  height: 100%;
  position: relative;
}
.song-sheet_img image {
  width: 100%;
}
.song-sheet_img image .song-sheet_playCount {
  position: absolute;
  font-size: 18rpx;
  color: #fff;
  top: 0;
  right: 5rpx;
}
.song-sheet_img image .song-sheet_playCount .iconfont {
  display: inline-block;
}
.song-sheet_img image .song-sheet_playCount text {
  display: inline-block;
  margin-left: 30rpx;
  margin-top: 4rpx;
}
.song-sheet_name {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}