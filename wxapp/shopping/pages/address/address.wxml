<!--pages/address/address.wxml-->
<view class="main">
  <view class="form-box">
    <form bindsubmit="formSubmit">
      <input placeholder="姓名" bindinput="bindName"/>
      <input placeholder="电话" bindinput="bindPhone"/>
      <input placeholder="地址" bindinput="bindDetail"/>
      <button form-type="submit">保存</button>
    </form>
  </view>
</view>
