{
  "compilerOptions": {
    "target": "es5", // 指定js版本为es5
    "module": "commonjs",
    "moduleResolution": "node", // 选择模块解析策略
    "experimentalDecorators": true, // 启用实验性的ES装饰器
    "allowSyntheticDefaultImports": true, // 允许从没有设置默认导出的模块中默认导入
    "sourceMap": true, // 生成相应的 .map文件 便于调试
    "strict": true, // 严格模式
    "noImplicitAny": true, // 不允许默认的any类型
    "alwaysStrict": true, // 以严格模式解析并为每个源文件生成 "use strict"语句
    "declaration": true, // 生成对应的.d.ts文件 (声明文件)
    "removeComments": true, // 删除所有注释，除了以 /!*开头的版权信息
    "noImplicitReturns": true, // 不是函数的所有返回路径都有返回值时报错
    "importHelpers": true, // 从 tslib 导入辅助工具函数（比如 __extends， __rest等）
    "lib": ["es6", "dom"], // 指定要包含在编译中的库文件
    "typeRoots": ["node_modules/@types"], // 要包含的类型声明文件路径列表
    "outDir": "./dist", // 出口文件夹
    "rootDir": "./src", // 入口文件夹
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}